<%- include('../header') %>

<div class="container">
  <!-- Content here -->
  <div class="alert alert-primary" role="alert">Editar Publicação</div>
  <form
    method="POST"
    style="margin-top: 10px"
    action="/publicacoes/editar/<%= categoria %>/<%= publicacao.id %>"
  >
    <div class="form-group">
      <label for="titulo">Título</label>
      <input
        type="text"
        class="form-control"
        id="titulo"
        name="titulo"
        placeholder="Digite o título"
        value="<%= publicacao.titulo %>"
      />
    </div>
    <div class="form-group">
      <label for="conteudo">Conteúdo</label>
      <textarea
        class="form-control"
        id="conteudo"
        name="conteudo"
        placeholder="Digite o conteúdo"
      >
<%= publicacao.conteudo %></textarea
      >
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>

<%- include('../footer') %>
